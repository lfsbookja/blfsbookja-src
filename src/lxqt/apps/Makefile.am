BOOKdir = @abs_bookdir@/lxqt/apps
CHANGE_FILES = \
	apps.ch           \
	obconf-qt.ch      \
	qterminal.ch      \
	lximage-qt.ch     \
	pavucontrol-qt.ch \
	qtermwidget.ch

EXTRA_DIST = $(CHANGE_FILES)
srcdir = @srcdir@
srcs = $(CHANGE_FILES:.ch=.xml)

SUFFIXES = .ch .xml
.ch.xml:
	$(top_builddir)/$(CTIE) -m $@ $(BOOKdir)/$@ $(srcdir)/$*.ch

all: ctie $(srcs)

ctie:
	cd $(top_builddir)/ctie && make ctie
