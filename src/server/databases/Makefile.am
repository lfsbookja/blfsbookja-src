BOOKdir = @abs_bookdir@/server/databases
CHANGE_FILES = \
	databases.ch  \
	db.ch         \
	lmdb.ch       \
	mariadb.ch    \
	postgresql.ch \
	sqlite.ch

EXTRA_DIST = $(CHANGE_FILES)
srcdir = @srcdir@
srcs = $(CHANGE_FILES:.ch=.xml)

SUFFIXES = .ch .xml
.ch.xml:
	$(top_builddir)/$(CTIE) -m $@ $(BOOKdir)/$@ $(srcdir)/$*.ch

all: ctie $(srcs)

ctie:
	cd $(top_builddir)/ctie && make ctie
